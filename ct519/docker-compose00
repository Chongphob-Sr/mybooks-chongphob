version: "3.3"
services:
  web:
    build: .
      context: ./php
      dockerfile: Dockerfile
    container_name: mybooks-chongphob
    depends_on:
      - db
    volumes:
      - ./php:/var/www/html/
    ports:
      - 8084:80
    networks:
      - mybooks-network

  db:
    container_name: mysql
    image: mysql:8.1.0
    command: --default-authentication-plugin=mysql_native_password
    restart: always
    environment: 
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: webapp
      MYSQL_USER: chongphob
      MYSQL_PASSWORD: 65130127
   volumes:
      - mysql_data:/var/lib/mysql
      - ./mysql/init.sql:/docker-entrypoint-initdb.d/init.sql  
   ports:
      - 6033:3306
   networks:
      - mybooks-network
        
networks:
  mybooks-network:

volumes:
  mysql_data:
